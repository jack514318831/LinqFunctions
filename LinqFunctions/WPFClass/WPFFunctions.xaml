                </Trigger>
            </Style.Triggers>
        </Style>-->
        <Style x:Key="TriggerStyle" TargetType="Button">
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Foreground" Value="Green"/>
                </Trigger>
            </Style.Triggers>
        </Style>
